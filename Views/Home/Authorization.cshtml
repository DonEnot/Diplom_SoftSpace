@using SoftSpace_web.Models;
@{
    ViewData["Title"] = "Authorisation";
}

@await Component.InvokeAsync("Menu" , new {})
<form method="post" asp-controller="User" asp-action="LogIn">
    @if(@ViewBag.AutoData.ex == 1)
    {
        <p>Логин не найден  !!! @Model</p>
    }

    @if(ViewBag.AutoData.ex == 2)
    {
        <p>Пароль не найден  !!! @Model</p>
    }
    @if(ViewBag.AutoData.ex == 3)
    {
        <p>Вы успешно зарегистрированы  </p>
    }
    @if(ViewBag.AutoData.ex == 4)
    {
        <p>Введите Логин </p>
    }
    @if(ViewBag.AutoData.ex == 5)
    {
        <p>Введите Пароль</p>
    }
    @if(ViewBag.AutoData.count > 10)
    {
        <p>Введите капчу </p>
    }
  <div class="autorisation">
    <div class="form-group">
        <label for="login">@ViewBag.Data_name[28]</label>
        <input type="login" class="form-control" name="login" aria-describedby="loginHelp" placeholder="@ViewBag.Data_name[28]">
        <small id="loginHelp" class="form-text text-muted">Мы не передаем информацию третьим лицам.</small>
    </div>
    <div class="form-group">
        <label for="password">@ViewBag.Data_name[29]</label>
        <input type="password" class="form-control" name="password" placeholder="@ViewBag.Data_name[29]">
    </div>
  </div>
  
  <button type="submit" class="btn btn-sm-2 btn-dark">@ViewBag.Data_name[0]</button>

    <a  method ="get" asp-controller="Home" asp-action="Reg" class="btn btn-sm-2 btn-dark">@ViewBag.Data_name[4]</a>
    
</form>