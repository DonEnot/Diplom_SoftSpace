@await Component.InvokeAsync("Menu" , new {})

<h1> Добавление продукта </h1>
<form method="post" enctype="multipart/form-data" asp-controller="Dev" asp-action="AddProduct"  class="form_line">
    <div class="card" style="width: 18rem;">

        <img src="~/Pictures/NaPicture.png" class="card-img-top" alt="...">
        <div class="card-body">
            
            

            <input type="file" name="u_file" multiple>
            
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                <div class="input-group-text">@@</div>
                </div>
                <input type="text" class="form-control" name="name" placeholder="Имя продукта" value="">
            </div>
            
            <div class="form-group">
                <label for="description">Описание</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
            </div>
            
            <select name="id_category">
            @foreach (var item in ViewBag.List_category)
                {

                    <option value="@item[0]">@item[1] </option>
                }
            </select>

            <select name="type_product">
                <option value="0" >Product</option>
                <option value="1">DLC</option>
            </select>

            <div class="form-group">
                <label for="labels">Метки</label>
                <textarea class="form-control" name="labels" rows="3">
                </textarea>
                
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number"  class="form-control" name="price"  value="0.00" step="0.01">
            </div>
        
            <input type="submit"  class="btn btn-primary" value="Добавить">
        </div>
    </div>
</form>