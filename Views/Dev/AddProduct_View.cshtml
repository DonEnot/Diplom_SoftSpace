@await Component.InvokeAsync("Menu" , new {})

<h1> Добавление продукта </h1>
@if(ViewBag.Ex == 1)
{
    <h1>Такой продукт уже существует  </h1>
}
<form method="post" enctype="multipart/form-data" asp-controller="Dev" asp-action="AddProduct"  class="form_line">
    <div class="card" style="width: 26rem;">

        <img src="~/Pictures/NaPicture.png" class="card-img-top" alt="...">
        <div class="card-body">
            
            

            <div class="input-group mb-2">
                <label for="u_file">Выберите фото</label>
                <input type="File"  name="u_file" >
            </div>
            
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                <div class="input-group-text">Имя</div>
                </div>
                <input  required type="text" class="form-control" name="name" placeholder="Имя продукта" value="">
            </div>
            
            <div class="form-group">
                <label for="description">Описание</label>
                <textarea required class="form-control" name="description" rows="3"></textarea>
            </div>
            
            
                
            <select name="id_category">
            @foreach (var item in ViewBag.List_category)
                {
                    <option value="@item[0]">@item[1] </option>
                }
            </select>

            

            <select name="type_product">
                <option value="0" >Продукт</option>
                <option value="1">Доп контент</option>
            </select>

            <div class="form-group">
                <label for="labels">Метки</label>
                <textarea class="form-control" name="labels" rows="3"></textarea>
                
            </div>

            <div class="form-group">
                <label for="price">Цена у.е.</label>
                <input type="number"  class="form-control" name="price"  value="0.00" step="0.01" max="12000000">
            </div>
        
            <input type="submit"  class="btn btn-sm-2 btn-dark" value="Добавить">
        </div>
    </div>
</form>