@await Component.InvokeAsync("Menu" , new {})
<h1>Add Event</h1>



<form method="post" asp-controller="Dev" asp-action="AddEvent"  class="form_line">
    <div class="card" style="width: 18rem;">
        <img src="~/Pictures/NaPicture.png" class="card-img-top" alt="...">
        <div class="card-body">

            <input type ="hidden" name="_id_product" value=" @Model">

            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">@@</div>
                </div>
                <input type="text" class="form-control" name="name" placeholder="EventName" value="">
            </div>

            <div class="form-group">
                <label for="description">Example textarea</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
            </div>

             <button type="submit">Add</button>
        </div>
  
    </div>
</form>