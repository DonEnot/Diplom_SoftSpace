@await Component.InvokeAsync("Menu" , new {})
<h1>AddDev</h1>





<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">id</th>
      <th scope="col">name of product</th>
      <th scope="col">name of company</th>
      <th scope="col">category name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
@foreach( var a in @ViewBag.AddDlC.dlcs) 
{
    <tr>
      <th scope="row">@a[0]</th>
      <td>@a[1]</td>
      <td>@a[2]</td>
      <td>@a[3]</td>
      <td>
          <form method="post" asp-controller="Dev" asp-action="AddDLC">
            <input type ="hidden" name="_id_product" value=" @ViewBag.AddDlC.id_product">
            <input type ="hidden" name="_id_dlc" value="@a[0]">
            <button type="submit">Add</button>
          </form>
      </td>
    </tr>
   
}


</table>
